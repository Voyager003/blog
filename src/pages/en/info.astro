---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { type Locale } from "../../i18n/config";

const lang: Locale = "en";
---

<Layout title="INFO" description="Info page" lang={lang}>
    <Header lang={lang} />
    <main
        class="w-full max-w-[800px] mx-auto px-4 sm:px-6 lg:px-8 py-12 lg:py-16 min-h-[60vh]"
    >
        <!-- Bio Section -->
        <section class="mb-20">
            <h1 class="text-3xl font-serif mb-6">Wongi Rim</h1>
            <h2
                class="text-xs uppercase tracking-wider text-[var(--color-text-tertiary)] mb-6"
            >
                Backend Engineer
            </h2>

            <div
                class="prose max-w-none text-[var(--color-text-secondary)] text-[15px] leading-relaxed mb-8"
            >
                <p class="mb-4">
                    Hello, I am a Backend Engineer who loves building robust and
                    scalable systems. I focus on clean code, architecture, and
                    solving complex problems with simple solutions.
                </p>
            </div>

            <ul class="flex flex-col gap-1 text-[14px]">
                <li>
                    <a
                        href="https://github.com/yourusername"
                        target="_blank"
                        class="hover:text-[var(--color-accent)] transition-colors"
                        >- github</a
                    >
                </li>
                <li>
                    <a
                        href="mailto:your@email.com"
                        class="hover:text-[var(--color-accent)] transition-colors"
                        >- e-mail</a
                    >
                </li>
                <li>
                    <a
                        href="#"
                        class="hover:text-[var(--color-accent)] transition-colors"
                        >- instagram</a
                    >
                </li>
            </ul>
        </section>
    </main>
    <Footer lang={lang} />
</Layout>
