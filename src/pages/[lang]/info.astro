---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { locales, type Locale } from "../../i18n/config";
import { useTranslations } from "../../i18n/utils";

export function getStaticPaths() {
    return locales.map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params as { lang: Locale };
const t = useTranslations(lang);

const skills = [
    t('skill.creativeDev'),
    t('skill.webgl'),
    t('skill.installations'),
    t('skill.motion'),
    t('skill.ml'),
    t('skill.canvas')
];

const socialLinks = [
    { name: "GitHub", href: "https://github.com/nicejongmin" },
    { name: "Twitter", href: "https://twitter.com/nicejongmin" },
    { name: "CodePen", href: "https://codepen.io/nicejongmin" },
    { name: "LinkedIn", href: "https://linkedin.com/in/nicejongmin" }
];
---

<Layout
    title={t('nav.info')}
    description={lang === 'ko'
        ? "김종민은 15년 이상의 경험을 가진 크리에이티브 개발자로, 서울을 기반으로 인터랙티브 경험과 디지털 아트 설치 작업을 합니다."
        : "Jongmin Kim is a creative developer with over 15 years of experience building interactive experiences, experimental interfaces, and digital art installations based in Seoul, Korea."
    }
    keywords={['about', 'jongmin kim', 'creative developer', 'seoul', 'korea', 'webgl', 'interactive']}
    ogType="profile"
    lang={lang}
>
    <Header lang={lang} />
    <main class="w-full max-w-[1000px] mx-auto px-8 py-12 lg:py-16">
        <div class="grid grid-cols-1 lg:grid-cols-[280px_1fr] gap-16 lg:gap-32">
            <!-- Photo Column -->
            <div class="lg:sticky lg:top-[calc(var(--header-height)+32px)] lg:self-start">
                <div class="aspect-square bg-gradient-to-br from-[#f0f0f0] to-[#e8e8e8] flex items-center justify-center max-w-[200px] lg:max-w-none mx-auto lg:mx-0">
                    <span class="text-[48px] font-light text-[var(--color-text-tertiary)]" style="font-family: var(--font-serif)">JK</span>
                </div>
            </div>

            <!-- Content Column -->
            <div class="animate-fade-in-up">
                <span class="label block mb-8">{t('info.about')}</span>

                <h1 class="text-[42px] font-light leading-none mb-2" style="font-family: var(--font-serif)">Jongmin Kim</h1>
                <p class="text-[14px] text-[var(--color-text-secondary)] mb-12">{t('info.subtitle')}</p>

                <div class="max-w-[560px] mb-12">
                    <p class="text-[15px] leading-relaxed text-[var(--color-text-secondary)] mb-4">
                        {t('info.bio1')}
                    </p>
                    <p class="text-[15px] leading-relaxed text-[var(--color-text-secondary)]">
                        {t('info.bio2')}
                    </p>
                </div>

                <!-- Skills -->
                <div class="mb-12">
                    <h2 class="text-[11px] font-medium tracking-wider uppercase text-[var(--color-text-tertiary)] mb-4">{t('info.expertise')}</h2>
                    <ul class="flex flex-wrap gap-x-8 gap-y-2">
                        {skills.map((skill) => (
                            <li class="skill-item text-[14px] text-[var(--color-text-secondary)] cursor-default">
                                {skill}
                            </li>
                        ))}
                    </ul>
                </div>

                <!-- Social Links -->
                <div class="mb-12">
                    <h2 class="text-[11px] font-medium tracking-wider uppercase text-[var(--color-text-tertiary)] mb-4">{t('info.connect')}</h2>
                    <div class="flex flex-wrap gap-x-8 gap-y-2">
                        {socialLinks.map((link) => (
                            <a
                                href={link.href}
                                class="social-link text-[14px] text-[var(--color-text-secondary)] hover:text-[var(--color-accent)] transition-colors"
                                target="_blank"
                                rel="noopener noreferrer"
                            >
                                {link.name}
                            </a>
                        ))}
                    </div>
                </div>

                <!-- Contact -->
                <div>
                    <h2 class="text-[11px] font-medium tracking-wider uppercase text-[var(--color-text-tertiary)] mb-4">{t('info.contact')}</h2>
                    <a
                        href="mailto:hello@cmiscm.com"
                        class="text-[18px] text-[var(--color-text)] hover:text-[var(--color-accent)] transition-colors"
                        style="font-family: var(--font-serif)"
                    >
                        hello@cmiscm.com
                    </a>
                </div>
            </div>
        </div>
    </main>
    <Footer lang={lang} />
</Layout>
