---
interface Props {
    title: string;
    category: string;
    hue?: number;
    href?: string;
    date?: string;
    description?: string;
}

const {
    title,
    category,
    hue = 0,
    href = "#",
    date = "2024",
    description = "",
} = Astro.props;
---

<article
    class="group cursor-pointer flex flex-col gap-3"
    data-category={category.toLowerCase()}
>
    <!-- Date -->
    <span
        class="text-[10px] font-medium tracking-wider text-[var(--color-text-tertiary)] uppercase"
        >{date}</span
    >

    <a
        href={href}
        class="block group-hover:opacity-95 transition-opacity duration-300"
    >
        <!-- Image -->
        <div
            class="relative aspect-[16/9] overflow-hidden rounded-lg mb-4 bg-[var(--color-bg-secondary)]"
        >
            <div
                class="absolute inset-0 transition-transform duration-500 group-hover:scale-105"
                style={`background: linear-gradient(135deg, hsl(${hue} 5% 94%) 0%, hsl(${hue} 5% 88%) 100%);`}
            >
            </div>
        </div>

        <!-- Title -->
        <h3
            class="text-[15px] font-bold text-[var(--color-text-primary)] mb-2 leading-tight"
        >
            {title}
        </h3>

        <!-- Description -->
        <p
            class="text-[13px] text-[var(--color-text-secondary)] leading-relaxed line-clamp-2 mb-4"
        >
            {description}
        </p>

        <!-- Category Tag -->
        <div class="flex">
            <span
                class="inline-flex items-center px-2.5 py-0.5 rounded-full text-[10px] bg-[var(--color-bg-tertiary)] text-[var(--color-text-secondary)] whitespace-nowrap"
            >
                {category}
            </span>
        </div>
    </a>
</article>
