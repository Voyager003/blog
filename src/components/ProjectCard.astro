---
interface Props {
    title: string;
    category: string;
    hue?: number;
    href?: string;
}

const { title, category, hue = 0, href = "#" } = Astro.props;
---

<article class="group cursor-pointer transition-transform duration-300 hover:-translate-y-1" data-category={category.toLowerCase()}>
    <a href={href} class="block">
        <div class="relative aspect-[4/3] overflow-hidden mb-4">
            <div
                class="absolute inset-0 transition-transform duration-500 group-hover:scale-105"
                style={`background: linear-gradient(135deg, hsl(${hue} 5% 94%) 0%, hsl(${hue} 5% 88%) 100%);`}
            ></div>
        </div>
        <div class="flex justify-between items-baseline">
            <h3 class="text-[16px] font-normal transition-colors duration-150 group-hover:text-[var(--color-accent)]" style="font-family: var(--font-serif)">
                {title}
            </h3>
            <span class="text-[11px] text-[var(--color-text-tertiary)]">{category}</span>
        </div>
    </a>
</article>
